        public BaseNotification(IUnitOfWork unitOfWork, IMapper mapper)
        {
            //_smsRepository = smsRepository;
            //_emailRepository = emailRepository;
            _mapper = mapper;
            _unitOfWork = unitOfWork;
            //_messageRepository = messageRepository;
