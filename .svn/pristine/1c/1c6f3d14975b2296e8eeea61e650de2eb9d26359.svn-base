@model dynamic

@{
    ViewBag.Title = "Purpose Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Scripts.Render("~/Scripts/eAzolution/Core/HrAdmin/Client/client.js")

<div class="mainDiv" style="text-align: center">

    <h2>Purpose/Client</h2>


    <div id="divTop" style="margin-bottom: 10px;">
        <label style="width: 100px;">Status:</label>
        <input id="cmbStatus" name="cmbStatus" />

        <button id="btnNew" class="k-button" type="submit" onclick="AddNewClientClicked()">Add New Purpose/Client</button>
    </div>
    <div class="clear"></div>




    <div id="DetailDiv" class="divDetails" style="display: none">



                <div>
                    <fieldset>
                        <legend>Purpose/Client Information</legend>

                        <div class="leftDiv">
                            <ul>
                                <li>
                                    <input type="hidden" id="txtClientID" value="" />   
@*                                    <input type="hidden" id="txtClientCode" value="" />*@
                                    <label for="ClientName" class="lbl widthSize30_per">Purpose/Client Name:</label>
                                    <input type="text" id="txtClientName" maxlength="100" name="ClientName" class="k-textbox"  />
                                </li>
                                <li>
                                      <label for="ClientCode" class="lbl widthSize30_per">Purpose/Client Code:</label>
                                    <input type="text" id="txtClientCode" name="ClientCode" class="k-textbox" placeholder="Purpose Code" />
                                </li>
                                <li>
                                    <label for="txtEmail" class="lbl widthSize30_per">Email:</label>
                                    <input type="email" id="txtEmail" maxlength="100" name="Email" class="k-textbox" placeholder="e.g. myname@example.net" />
                                </li>
                                <li>
                                    <label for="IsMovement" class="lbl widthSize30_per">Is Movement:</label>
                                    <input type="checkbox" id="chkIsMovement" name="IsMovement" class="k-checkbox" checked="checked" />
                                </li>
                                <li>
                                    <label for="IsDefault" class="lbl widthSize30_per">Is Active:</label>
                                    <input type="checkbox" id="chkIsActive" name="IsDefault" class="k-checkbox" checked="checked" />
                                </li>

                            </ul>
                        </div>
                        <div class="rightDiv">
                            <ul>
                                <li>
                                    <label for="txtAddress" class="lbl widthSize30_per">Address:</label>
                                    <textarea id="txtAddress" maxlength="2000" name="Address" class="k-textbox" rows="4"></textarea>
                                </li>
                                <li>
                                    <label for="txtPrimaryContact" class="lbl widthSize30_per">Primary Contact:</label>
                                    <input type="text" id="txtPrimaryContact" maxlength="100" name="PrimaryContact" class="k-textbox" />
                                </li>
                                  <li>
                                    <label for="ContactNo" class="lbl widthSize30_per">Contact No:</label>
                                    <input type="text" id="txtContactNo" maxlength="100" name="ContactNo" class="k-textbox" />
                                </li>

                            </ul>
                        </div>

                    </fieldset>
                </div>

                <div>
                    <fieldset>
                        <legend>Contact Information</legend>

                        <div id="ContactGrid"></div>
                        @*<div class="clear"></div>*@

                    </fieldset>
                </div>

                <div style="clear: both"></div>
                <div id="buttonDiv" style="width: 100%; text-align: center">
                    <ul>
                        <li id="liButton">
                            <button id="btnSave" class="k-button" type="submit" onclick="SubmitButtonClickEvent_Client()">Save</button>
                            <button id="btnClearAll" class="k-button" onclick="Client_clearAll()">Clear</button>
                            <button id="btnClose" class="k-button">Close</button>

                        </li>
                        <li class="status"></li>
                    </ul>
                </div>
            @*</div>*@



    </div>


    
    
    
    
    
