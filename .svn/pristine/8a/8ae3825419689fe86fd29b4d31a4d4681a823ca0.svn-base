
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

<link href="~/css/Style.css" rel="stylesheet" />





<div class="container" id="LoginDiv">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header" id="header">
                <h3 class="d-flex justify-content-center">Sign In</h3>
                <!--<div class="d-flex justify-content-end social_icon">-->
                <!--	<span><i class="fab fa-facebook-square"></i></span>-->
                <!--	<span><i class="fab fa-google-plus-square"></i></span>-->
                <!--	<span><i class="fab fa-twitter-square"></i></span>-->
                <!--</div>-->
            </div>
            <div class="card-body">
                <form>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" id="txtUserName" placeholder="User Name">

                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" class="form-control" id="txtPassword" placeholder="Password">
                    </div>
                    <div class="row align-items-center remember">
                        <input type="checkbox" id="check">Remember Me
                    </div>
                    <div class="form-group">
                        <input type="button" value="Sign In" id="btnSubmit" class="btn float-right login_btn">
                    </div>
                </form>
            </div>
            <div class="card-footer" id="footer">
                <div class="d-flex justify-content-center links">
                    Don't have an account?<a href="#">Sign Up</a>
                </div>
                <div class="d-flex justify-content-center links">
                    <a href="#">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>
</div>

