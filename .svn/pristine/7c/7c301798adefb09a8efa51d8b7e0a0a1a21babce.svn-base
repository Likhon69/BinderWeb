#header {
    background: #1b5e20;
    padding-top: -25px;
}

.card-header h3 {
    color: white;
    font-weight: bold;
    margin-top: 30px;
}

.social_icon {
    position: absolute;
    right: 20px;
    top: -45px;
}

.input-group-prepend span {
    width: 50px;
    background-color: #1b5e20;
    color: white;
    border: 0 !important;
}

input:focus {
    outline: 0 0 0 0 !important;
    box-shadow: 0 0 0 0 !important;
}

.remember {
    color: #1b5e20;
}

    .remember input {
        width: 20px;
        height: 20px;
        margin-left: 15px;
        margin-right: 5px;
    }

.login_btn {
    color: white;
    background-color: #1b5e20;
    width: 100px;
}

    .login_btn:hover {
        color: white;
        background-color: #2e7d32;
    }

.links {
    color: white;
}

    .links a {
        margin-left: 4px;
        color: white;
    }

#footer {
    background: #1b5e20;
}

#check {
    color: #1b5e20;
}
