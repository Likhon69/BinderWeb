
<script src="~/Scripts/eAzolution/Core/HrAdmin/SimNumberSettings/SimNumberDetails.js"></script>

<div id="divSimNumber" class="divDetails">


    <div id="divSimNumberDetails" class="divDetails">

        <ul>
            <li>
                <input type="hidden" id="hdnSimNumberId" value="0"/>
            </li>
            <li>
                <label for="SimNumber">Sim Number:</label>
                <input type="text" id="txtSimNumber" class="k-textbox" name="SimNumber" placeholder="Insert Sim Number name" required="required"/>
            </li>
